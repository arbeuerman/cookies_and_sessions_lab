<h1> Cart </h1>

<ul>  
  <% cart.each do |product| %>
    <li><%= product %></li>
  <% end %>
</ul>

<h1> Add product to Cart </h1>
<%= form_tag('/products/new', :method => "post") do  %>
    <%= label_tag(:product) %>
    <%= text_field_tag :product %>
    <input type="submit" value = "add to cart" > 
<% end %>